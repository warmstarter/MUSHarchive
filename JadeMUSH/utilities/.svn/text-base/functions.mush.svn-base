# FOR: lHasAccount()
# 
&UL-ACCOUNT-LOCATE-LIST #50 = 
  [setq(0, 
    ifelse(match(pos(%1, *), #-1), 
         %1, inmh)
  )]

  [setdiff(
    [switch(%q0, *i*, lcon(%0))] 
    [switch(%q0, *n*, setdiff(lcon(loc(%0)), %0))] 
    [switch(%q0, *h*, loc(%0))] 
    [switch(%q0, *m*, %0)], 

    REMOVE_DUPLICATES
  )]
