# Waylon@JadeMush
# take_stamina_points(<target>,<amount to deduct>)
# Based on code by Stephanie Dray
# FiranMUX founder.
&function-take_stamina_points #50=
   [setq(0, locate(%#, %0, *))]
   [switch(
      isdbref(%q0), 
        0
      ,
        #-1 Invalid Target
      ,
        [setq(1, getaccountd(%q0,stamina points))]
        [switch(
           gte(%q1,%1)
        ,
           1
        ,
           [ac_adjust(%q0,stamina points,-%1)]
        ,
           #-1 Target doesn't have enough points
        )]
   )]
-

