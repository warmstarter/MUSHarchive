# it returns #-1.
#
# @function/preserve/privileged #50/dspace_destination = 
#          function-dspace_destination
#
&function-dspace_destination #50 = 
  switch(0, 
    isdbref(%0),  #-1, 
    isdbref(%1),  #-1, 
    isdspace(%0), #-1, 
    
    [setq(0, objeval(%1, 
      [u(DXNEW, u(XNEW, %0))].[u(DYNEW, u(YNEW, %0))].[u(DZNEW, u(ZNEW, %0))]
    ))]
    [switch(%q0, 
      .*,    #-1, 
      *.,    #-1, 
      *..*,  #-1, 
             %q0
    )]
  )
