@adesc #3 = 
  @pemit %# = 
    %r
    Contents: %r
    %r

    [iter(sortby(me/sortby-name, lcon(me)), 
      [setq(0, name(##))]
      [ljust(
        ansi(default(##/color, n), 
          strtrunc(
            switch(%q0, Generic *, rest(%q0), %q0), 
            24
          )
        ), 
        25
      )]
    )]
