&TIDE Moon and Tide Functions=[u(semi-tide)]
&SEMI-TIDE Moon and Tide Functions=[ifelse(u(semi-low-and-rising), low and rising,)][ifelse(u(semi-high-and-rising), high and rising,)][ifelse(u(semi-slack-high-water), high and slack,)][ifelse(u(semi-high-and-ebbing), high and ebbing,)][ifelse(u(semi-low-and-ebbing), low and ebbing,)][ifelse(u(semi-slack-low-water), low and slack,)]
&SEMI-SLACK-HIGH-WATER Moon and Tide Functions=[or([and(gte(secs(), u(#555/semi-slack-high-water-begins-1)), lt(secs(), u(#555/semi-slack-high-water-ends-1)))], [and(gte(secs(), u(#555/semi-slack-high-water-begins-2g)), lt(secs(), u(#555/semi-slack-high-water-ends-2)))])]
&SEMI-HIGH-AND-EBBING Moon and Tide Functions=[or([and(gte(secs(), u(#555/semi-slack-high-water-ends-1)), lt(secs(), u(#555/semi-mid-ebb-1)))], [and(gte(secs(), u(#555/semi-slack-high-water-ends-2)), lt(secs(), u(#555/semi-mid-ebb-2)))])]
&SEMI-LOW-AND-EBBING Moon and Tide Functions=[or([and(gte(secs(), u(#555/semi-mid-ebb-1)), lt(secs(), u(#555/semi-slack-low-water-begins-1)))], [and(gte(secs(), u(#555/semi-mid-ebb-2)), lt(secs(), u(#555/semi-slack-low-water-begins-2)))])]
&SEMI-SLACK-LOW-WATER Moon and Tide Functions=[or([and(gte(secs(), u(#555/semi-slack-low-water-begins-1)), lt(secs(), u(#555/semi-slack-low-water-ends-1)))], [and(gte(secs(), u(#555/semi-slack-low-water-begins-2)), lt(secs(), u(#555/semi-slack-low-water-ends-2)))])]
&SEMI-LOW-AND-RISING Moon and Tide Functions=[or([and(gte(secs(), u(#555/semi-slack-low-water-ends-1)), lt(secs(), u(#555/semi-mid-flood-1)))], [and(gte(secs(), u(#555/semi-slack-low-water-ends-2)), lt(secs(), u(#555/semi-mid-flood-2)))])]
&SEMI-HIGH-AND-RISING Moon and Tide Functions=[or([and(gte(secs(), u(#555/semi-mid-flood-1)), lt(secs(), u(#555/semi-slack-high-water-begins-2l)))], [and(gte(secs(), u(#555/semi-mid-flood-2)), lt(secs(), u(#555/semi-next-cycle-begins)))])]
&SEMI-SLACK-HIGH-WATER-BEGINS-1 Moon and Tide Functions=[u(meridian-transit)]
&SEMI-EBB-BEGINS-1 Moon and Tide Functions=[add(u(meridian-transit), u(#7/secs-per-halfhour))]
&SEMI-SLACK-HIGH-WATER-ENDS-1 Moon and Tide Functions=[add(u(meridian-transit), u(#7/secs-per-hour))]
&SEMI-MID-EBB-1 Moon and Tide Functions=[add(u(meridian-transit), u(#7/secs-per-halfhour), div(u(secs-per-moonday), 8))]
&SEMI-SLACK-LOW-WATER-BEGINS-1 Moon and Tide Functions=[add(u(meridian-transit), div(u(secs-per-moonday), 4))]
&SEMI-FLOOD-BEGINS-1 Moon and Tide Functions=[add(u(meridian-transit), u(#7/secs-per-halfhour), div(u(secs-per-moonday), 4))]
&SEMI-SLACK-LOW-WATER-ENDS-1 Moon and Tide Functions=[add(u(meridian-transit), u(#7/secs-per-hour), div(u(secs-per-moonday), 4))]
&SEMI-MID-FLOOD-1 Moon and Tide Functions=[add(u(meridian-transit), u(#7/secs-per-halfhour), mul(div(u(secs-per-moonday), 8), 3))]
